<%- include ('partials/header')  %>
    <div class="ui main text container">
        <div id="main_header" class="ui huge header center aligned black">RESTful Blog App</div>
        <div class="ui top main raised segment">
            <div class="ui divided items">
                <% blogs.forEach(blog => { %>
                    <div class="container item main">
                        <div class="image  ">
                            <img class="ui image rounded" alt="Cannot find the image" src="<%= blog.image %> " alt="">
                        </div>
                        <div class="content">
                            <a href="/blogs/<%= blog._id %>" class="header">
                                <%= blog.title %>
                            </a>
                            <div class="meta">
                                <span><%= blog.created.toDateString() %> </span>
                            </div>
                            <div class="description">
                                <p>
                                    <%- blog.body.substring(0,100) %>...
                                </p>
                            </div>
                            <div class="extra">
                                <a href="/blogs/<%= blog._id %>" class="ui button tiny inverted blue">
                                    Read More
                                    <i class="right chevron icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </div>

    <%- include ('partials/footer')  %>