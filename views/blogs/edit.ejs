<%- include('../partials/header') %>
    <div class="ui main raised text container segment">
        <div class="ui huge header">
            Edit
            <%= blog.title %>

        </div>
        <form class="ui form" action="/blogs/<%= blog._id %>/?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %> ">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" alt="Can't find the image" value="<%= blog.image %> ">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>
            <button class="ui button blue large raised" type="submit">Update</button>
            <a href="/blogs/<%= blog.id %> " class="ui button grey">Back</a>
        </form>
    </div>
    <%- include('../partials/footer') %>